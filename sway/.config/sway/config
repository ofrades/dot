# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
set $scripts ~/.config/sway/scripts
set $term kitty
set $lock swaylock -f
set $volume $scripts/volume
set $notify $scripts/notify
# Your preferred application launcher
# Note: pass the final command to swaymsg so that the resulting window can be opened
# on the original workspace that the command was run on.
set $menu exec rofi -show run
set $menu exec ~/.config/rofi/launchers/type-1/launcher.sh
set $emoji exec splatmoji copy
set $powermenu exec ~/.config/rofi/powermenu/type-1/powermenu.sh
set $volumemenu exec ~/.config/rofi/applets/bin/volume.sh
set $clipboard exec clipman pick -t rofi
exec_always pkill wl-paste
exec_always wl-paste -p -t text --watch clipman store --max-items 1024
exec_always wl-paste -t text --watch clipman store --max-items 1024
exec_always clipman restore

set $slack exec slack
set $files nautilus

bindsym Print exec grim - | wl-copy && $notify screenshot "Full Screen Captured"
# set $printscreen exec grim -g "$(slurp -d)" - | wl-copy && $notify screenshot "Screenshot Captured"
set $printscreen exec grim -g "$(slurp)" - | swappy -f -
set $recordscreen exec $scripts/cast

# Theme
set $bg_active #393939
set $bg #161616
set $border #262626
set $fg #08bdba
set $fg_active #f2f4f8
set $fg_urg #ee5396
set $border_urg #ee5396

### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
output * bg $bg solid_color
output * scale 2
seat seat0 xcursor_theme Simple-and-Soft 30

#                       Border       Background Text     Indicator             Child       border
client.focused          $border      $bg_active          $fg_active            $bg_active         $bg_active
client.focused_inactive $border      $bg                 $fg                   $bg         $bg
client.unfocused        $border      $bg                 $fg                   $bg         $bg
client.urgent           $border_urg  $bg                 $fg_urg               $fg_urg     $fg_urg
client.placeholder      $border      $bg                 $fg                   $fg         $fg
client.background       $border      $bg                 $fg                   $fg         $fg

# gap # Borders
# gaps inner 3
default_border pixel 3
default_floating_border none

#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs
output * scale 1
output * scale_filter linear
# output DP-3 scale 1
# Define outputs
set $output-primary DP-3
set $output-secondary eDP-1

# Workspace names
set $ws1 "1:"
set $ws2 "2:"
set $ws3 "3:聆"
set $ws4 "4:"

set $ws9 "9:"
set $ws8 "8:"

#################################################################
## Screen Lock
#################################################################
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.
exec_always pkill swayidle; swayidle -w \
         timeout 300 "$lock" \
         timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
         before-sleep "$lock"
bindswitch lid:on exec $lock
bindsym $mod+Alt+l exec $lock

# workspace to displays
workspace $ws1 output $output-primary
workspace $ws2 output $output-primary
workspace $ws3 output $output-primary
workspace $ws4 output $output-primary

workspace $ws9 output $output-secondary
workspace $ws8 output $output-secondary



font pango:BlexMono Nerd Font 11

# This is the only place where you must set GTK scaling
exec_always {
    gsettings set org.gnome.desktop.interface text-scaling-factor 1
    gsettings set org.gnome.desktop.interface cursor-size $cursor_size
}

### Input configuration
# Touchpad
input type:touchpad {
    dwt enabled
    tap enabled
    drag disabled
    drag_lock disabled
    click_method clickfinger
    natural_scroll enabled
    accel_profile adaptive
    pointer_accel 0.5
    tap_button_map lrm
}

# Keyboard
input "type:keyboard" {
  repeat_delay 200
  repeat_rate 50
  xkb_layout us,pt
  xkb_options "grp:alt_shift_toggle,caps:escape"
}

#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

### Key bindings
#
# Basics:
#
# Start a terminal
bindsym $mod+Return exec $term mux
bindsym $mod+t exec $term

# Kill focused window
bindsym $mod+q kill

# Start your launcher
bindsym $mod+d exec $menu
bindsym $mod+x exec $powermenu
bindsym $mod+v exec $volumemenu
bindsym $mod+c exec $clipboard
bindsym $mod+e exec $emoji

bindsym $mod+Shift+i sleep 3 && exec noisetorch -i -t 95
bindsym $mod+Shift+u sleep 3 && exec noisetorch -u

# Start chrome
bindsym $mod+b exec brave-browser

# Start slack
bindsym $mod+Shift+s exec $slack

# Screeshot
bindsym $mod+p exec $printscreen
bindsym $mod+Shift+p exec $recordscreen
bindsym $mod+Shift+BackSpace exec killall -s SIGINT wf-recorder

# Files
bindsym $mod+f exec $files

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+Shift+c reload

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
#
# Moving around:
#
# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
# Or use $mod+[up|down|left|right]
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
# Ditto, with arrow keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
#
# Workspaces:
#
# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+9 workspace number $ws9
bindsym $mod+8 workspace number $ws8
# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+8 move container to workspace number $ws8
#
# Layout stuff:
#
# Switch the current container between different layout styles
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+r layout toggle split

# Make the current focus fullscreen
bindsym $mod+m fullscreen

bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5% && $volume
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5% && $volume
bindsym $mod+i exec pactl set-sink-volume @DEFAULT_SINK@ +5% && $volume
bindsym $mod+o exec pactl set-sink-volume @DEFAULT_SINK@ -5% && $volume

bindsym --locked XF86MonBrightnessUp exec light -T 1.4
bindsym --locked XF86MonBrightnessDown exec light -T 0.72

bindsym $mod+BackSpace exec pactl set-source-mute 0 toggle

# Resize
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+r mode "resize"

# Bar
bar {
  swaybar_command waybar
}

exec --no-startup-id /usr/libexec/polkit-gnome-authentication-agent-1
exec mako

include /etc/sway/config.d/*
