# Fonts
font-family = "Symbols Nerd Font Mono"
font-family = "JetBrains Mono"
font-size = 10
adjust-underline-position = 4

# Mouse
mouse-hide-while-typing = true

# Theme
theme = Everforest Dark - Hard
cursor-invert-fg-bg = true
background-opacity = 0.9
window-theme = ghostty

# Keybinds

# Tabs
keybind = ctrl+a>c=new_tab
keybind = ctrl+a>n=next_tab
keybind = ctrl+a>p=previous_tab

# Splits
keybind = ctrl+a>z=toggle_split_zoom
keybind = ctrl+a>v=new_split:right
keybind = ctrl+a>s=new_split:down
keybind = ctrl+a>r=reload_config

keybind = ctrl+a>1=goto_tab:1
keybind = ctrl+a>2=goto_tab:2
keybind = ctrl+a>3=goto_tab:3
keybind = ctrl+a>4=goto_tab:4
keybind = ctrl+a>5=goto_tab:5
keybind = ctrl+a>j=goto_split:bottom
keybind = ctrl+a>k=goto_split:top
keybind = ctrl+a>h=goto_split:previous
keybind = ctrl+a>l=goto_split:next

keybind = alt+shift+up=resize_split:up,10
keybind = alt+shift+down=resize_split:down,10
keybind = alt+shift+left=resize_split:left,10
keybind = alt+shift+right=resize_split:right,10


keybind = ctrl+a>w=close_surface

# Window
gtk-single-instance = true
gtk-tabs-location = bottom
window-decoration = false

# Other
copy-on-select = clipboard
confirm-close-surface = false

